{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row">
            <h1 class="col-12 text-center my-5">{{ article.title }}</h1>
        </div>

        {# Lien pour revenir à la liste des articles #}
        <div class="row">
            <div class="text-center col-12 mb-3">
                <a href="{{ path('blog_publication_list') }}" class="text-decoration-none">Retour liste des articles</a>
            </div>
        </div>

        {# Affichage de l'article #}
        <div class="row">

            <div class="col-12 col-md-8 mx-auto">

                <article class="card bg-black my-2">

                    <div class="card-body">

                        <footer class="blockquote-footer mt-0 mb-4">
                            Publié le <span class="text-light">{{ article.publicationDate()|date('d/m/Y à H\\hi') }}</span> par <span class="text-light">{{ article.author.pseudonym }}</span>
                        </footer>

                        <div class="mb-2">
                            {{ article.content|purify }}
                        </div>

                        {# Si l'utilisteur a le rôle admin #}
                        {% if is_granted('ROLE_ADMIN') %}

                            <div class="mt-3">

                                <a href="{{ path('blog_publication_edit', {'id' : article.id, }) }}" class="text-decoration-none text-warning me-3">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Modifier
                                </a>

                                <a onclick="return confirm('Êtes-vous sur de vouloir supprimer cet article ?')" href="{{ path('blog_publication_delete', {'id': article.id, 'csrf_token' : csrf_token('blog_publication_delete_' ~ article.id)}) }}" class="text-decoration-none text-danger">
                                    <i class="fa-solid fa-trash-can"></i>
                                    Supprimer
                                </a>

                            </div>

                        {% endif %}

                    </div>

                </article>

            </div>

        </div>

        {# Espace commentaire #}
        <div class="row">

            <div class="col-12 col-md-8 mx-auto">

                <div class="bg-black p-4 my-4">

                    <h2 class="text-center mb-5">Commentaires ({{ article.comments|length }})</h2>

                    {% for comment in article.comments %}

                        {# Affichage commentaire #}
                        <div class="card bg-dark my-3">
                            <div class="card-body row">

                                {# Affichage de la photo de profil de l'auteur du commentaire #}
                                <div class="px-0 mx-2 d-flex justify-content-center align-items-center bg-black comment-profil-photo">

                                    {# Affichage de la phoot de profil s'il y en a une, sinon photo par défaut de Batman #}
                                    {% if comment.author.photo is null %}
                                        <img class="img-fluid" src="{{ asset('images/profil_default.jpg' )|imagine_filter('comment') }}" alt="">
                                    {% else %}
                                        <img class="img-fluid" src="{{ asset('images/profils/' ~ comment.author.photo )|imagine_filter('comment') }}" alt="">
                                    {% endif %}

                                </div>

                                {# Contenu, date et auteur du commentaire #}
                                <div class="col-12 col-sm mt-2 mt-sm-0">

                                    <footer class="blockquote-footer mt-0 mb-4">
                                        Ajouté par <strong class="text-light">{{ comment.author.pseudonym }}</strong>
                                        <br class="d-sm-none">
                                        Le <strong class="text-light">{{ comment.publicationDate|date('d/m/Y à H\\hi') }}</strong>
                                    </footer>
                                    <p>{{ comment.content|nl2br }}</p>

                                </div>

                                {# Si l'utilisateur est admin, affichage d'un bouton de suppression du commentaire #}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <div class="admin-button-article">

                                        <a class="text-danger text-decoration-none" href="{{ path('blog_comment_delete', {'id': comment.id, 'csrf_token': csrf_token('blog_comment_delete' ~ comment.id) }) }}" onclick="return confirm('Êtes vous sur de vouloir supprimer ce commentaire ?')">
                                            <i class="fa-solid fa-trash-can"></i>
                                            Supprimer
                                        </a>

                                    </div>
                                {% endif %}

                            </div>
                        </div>

                    {% else %}
                        <p class="text-center alert alert-info">Aucun commentaire n'a été publié pour le moment.</p>
                    {% endfor %}
                    
                    {# si l'utilisateur est connecté on affiche le dormulaire de cr"ation d'un nv commentaire #}
                    {% if app.user %}

                        <h2 class="text-center my-5">Écrire un commentaire</h2>
                        {{ form( form ) }}

                    {% else %}
                        <p class="text-center text-info mt-4">
                            Vous devez <a href="{{ path('app_login') }}">vous connecter</a> pour laisser un commentaire.
                        </p>
                    {% endif %}

                    
                </div>

            </div>

        </div>

    </div>





{% endblock %}

